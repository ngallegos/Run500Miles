<header >
  <%= link_to logo, root_path %>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", root_path %></li>
            <% if signed_in? %>
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Leaderboards", leaderboards_path %></li>
              <li><%= link_to "Statistics", statistics_path %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <% end %>
            <% if signed_in? %>
              <li><%= link_to "Sign Out", signout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "Sign In", signin_path %></li>
            <% end %>
          </ul>
        </nav>
		<br />
		<br />
		<div class="qotw round">
		  <br />
		  <% if signed_in? && current_user.admin? %>
		    <span class="qotw-content">
			  &quot;<%= link_to wrap(qotw[:content], 20), edit_quote_path %>&quot;
			</span>
		  <% else %>
		    <span class="qotw-content">
			  &quot;<%= wrap(qotw[:content], 20) %>&quot;
			</span>
		  <% end %>		  
		  <br />
		  <span class="qotw-source">- <%= qotw[:source] %></span>
		</div>
      </header>